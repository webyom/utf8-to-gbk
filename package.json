{
  "name": "utf8-to-gbk",
  "productName": "utf8-to-gbk",
  "version": "1.0.0",
  "description": "App for converting UTF8 files to GBK",
  "license": "MIT",
  "copyright": "Gary Wang",
  "author": {
    "name": "Gary Wang",
    "email": "webyom@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/webyom/utf8-to-gbk.git"
  },
  "bugs": {
    "url": "https://github.com/webyom/utf8-to-gbk/issues"
  },
  "main": "app/content/main.js",
  "keywords": [
    "UTF8",
    "GBK"
  ],
  "scripts": {
    "reinstall": "rm -rf node_modules; rm -rf app/node_modules; npm install; cd app; npm install; cd -",
    "start": "gulp start-dev",
    "build": "gulp build",
    "pack": "electron-builder --dir",
    "dist": "electron-builder -mw --x64 --ia32"
  },
  "build": {
    "appId": "org.webyom.utf8-to-gbk",
    "asar": true,
    "files": [
      "**/*",
      "!node_modules/.bin${/*}"
    ],
    "copyright": "Â©2017 Gary Wang",
    "mac": {
      "category": "public.app-category.productivity"
    },
    "dmg": {
      "background": "build/appdmg.png",
      "icon": "build/icon.icns",
      "iconSize": 128,
      "contents": [
        {
          "x": 380,
          "y": 240,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 122,
          "y": 240,
          "type": "file"
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis-web",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "build/icon.ico",
      "publisherName": "Gary Wang"
    },
    "nsis": {
      "perMachine": true,
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.2.1",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-0": "^6.5.0",
    "chalk": "^2.3.0",
    "del": "^3.0.0",
    "devtron": "^1.4.0",
    "electron": "^1.7.10",
    "electron-builder": "^19.52.1",
    "electron-connect": "^0.6.3",
    "electron-debug": "^1.5.0",
    "electron-react-devtools": "^0.5.3",
    "fancy-log": "^1.3.2",
    "gulp": "^3.9.1",
    "gulp-babel": "^7.0.0",
    "gulp-eslint": "^4.0.1",
    "gulp-html-i18n": "^0.10.0",
    "gulp-less": "^3.4.0",
    "gulp-lesshint": "^1.1.0",
    "gulp-minifier": "^1.1.0",
    "gulp-mt2amd": "^1.3.0",
    "gulp-postcss": "^7.0.1",
    "gulp-property-merge": "^0.3.0",
    "lazypipe": "^1.0.1",
    "postcss-cssnext": "^3.0.2",
    "postcss-import": "^11.0.0",
    "require-all": "^2.2.0",
    "run-sequence": "^2.2.1",
    "through2": "^2.0.3"
  }
}
